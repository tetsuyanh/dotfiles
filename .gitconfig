[core]
    pager = less -q -R
	excludesfile = /Users/tetsuya.harada/.gitignore
    preloadindex = true

[color]
    ui = auto

[color "diff"]
    # http://qiita.com/qurage/items/452f2debb64e2708a46c
    meta = 242 238
    frag = 239 236
    old = 167 normal
    new = 030 normal
    context = 240
    commit = 246 024

[diff]
    compactionHeuristic = true

[alias]
    st = status
    co = checkout
    cm = commit
    pl = pull
    ps = push
    typechange = status -s | awk '$1=="T"{print $2}' | xargs git checkout
    graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
    br = branch
    review = diff origin/master...

[help]
    autocorrect = 1

[push]
    # Use the Git 1.x.x default to avoid errors on machines with old Git
    # installations. To use `simple` instead, add this to your `~/.extra` file:
    # `git config --global push.default simple`. See http://git.io/mMah-w.
    default = matching

[user]
	name = tetsuyanh
	email = tetsuyanh@gmail.com

[pager]
    log  = diff-highlight | less -RX
    show = diff-highlight | less -RX
    diff = diff-highlight | less -RX

[diff]
    tool      = vimdiff
    algorithm = histogram
    compactionHeuristic = true

[ghq]
    root = ~/src

[merge]
    tool = vimdiff

[github]
    user = tetsuyanh

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/tetsuya.harada/.stCommitMsg
[http "https://gopkg.in"]
	followRedirects = true
